@page "/dataanalyticstool"

<style>
    * {
        margin: 0;
        padding: 0;
    }
    .da-container {
        width: 97%;
        margin-left: 1.5%;
        margin-right: 1.5%;
        height: 100%;
        border-radius: 3em;
        display: flex;
    }
    .da-nav {
        width: 5%;
        background-color: black;
        box-shadow: 0 2px 5px 0 rgba(255,255,255, 1), 0 2px 10px 0 rgba(255,255,255, 1);
        height: 90%;
        margin-top: 3%;
        border-top-left-radius: 30px;
        border-bottom-left-radius: 30px;
        border-top-right-radius: 30px;
        border-bottom-right-radius: 30px;
        padding-top: 5vh;
        padding-bottom: 5vh;
    }
    .da-nav-option {
        width: 100%;
        height: 8vh;
        text-align: center;
        color: #00bcae;
        font-size: 1em;
        margin-top: 1vh;
        text-align: center;
    }
        .da-nav-option:hover {
            width: 100%;
            height: 8vh;
            text-align: center;
            background-color: #00bcae;
            color: white;
            margin-top: 1vh;
            text-align: center;
        }
    .da-nav-icon {
        width: 100%;
        height: 8vh;
        font-size: 1.5em;
        line-height: 8vh;
    }
    .bottom-cover {
        height: 42px;
        width: 92%;
        background-color: white;
        position: absolute;
        z-index: 1;
        margin-left:5%;
        border-top-left-radius: 0px;
        border-bottom-left-radius: 30px;
        border-top-right-radius: 0px;
        border-bottom-right-radius: 30px;
        background-color: rgba(255,255,255,1);
        border: none;
        top: 87%;
    }
    .da-main {
        width: 95%;
        height: 90%;
        margin-top: 3%;
        border-top-left-radius: 30px;
        border-bottom-left-radius: 30px;
        border-top-right-radius: 30px;
        border-bottom-right-radius: 30px;
    }
    iframe {
        width: 100%;
        height: 100%;
        padding:0;
        background-color: transparent;
        border: none;
        border-top-left-radius: 30px;
        border-bottom-left-radius: 30px;
        border-top-right-radius: 30px;
        border-bottom-right-radius: 30px;
    }
</style>

<div class="da-container">
    <div class="da-nav">
        <div class="da-nav-option" @onclick="showConversionRates">
            <i class="fas fa-exchange-alt da-nav-icon"></i>
        </div>
        <div class="da-nav-option" @onclick="showGenderRatios">
            <i class="fas fa-venus-mars da-nav-icon"></i>
        </div>
        <div class="da-nav-option" @onclick="showJobPortalStats">
            <i class="fas fa-briefcase da-nav-icon"></i>
        </div>
        <div class="da-nav-option" @onclick="showJobTypeStats">
            <i class="fas fa-file-signature da-nav-icon"></i>
        </div>
        <div class="da-nav-option" @onclick="showRecruitingFunnelStats">
            <i class="fas fa-filter da-nav-icon"></i>
        </div>
        <div class="da-nav-option" @onclick="showTrafficStats">
            <i class="fas fa-traffic-light da-nav-icon"></i>
        </div>
        <div class="da-nav-option" @onclick="showTalentRating">
            <i class="fas fa-percent da-nav-icon"></i>
        </div>
    </div>
    <div class="da-main" hidden="@conversionRateIsHidden">
  
    </div>
    <div class="da-main" hidden="@genderRatioIsHidden">
       
    </div>
    <div class="da-main" hidden="@jobPortalIsHidden">
        
    </div>
    <div class="da-main" hidden="@jobTypeIsHidden">
        
    </div>
    <div class="da-main" hidden="@recruitingFunnelIsHidden">
        
    </div>
    <div class="da-main" hidden="@trafficIsHidden">
