@page "/hrapplicantcontroltool"
@inject HttpClient httpClient

<style>
    .handPointer {
        cursor: pointer;
    }

    .headingPage {
        height: 5vh;
        color: #003340;
    }
</style>

<div hidden="@mainmodel.HRIsHidden">

    <!--Heading Page-->
    <br />
    <h1 class="headingPage text-center">Applicant Control Tool</h1>
    <br />

    <div class="container">

        <!--Search-Box-->
        <div class="row" style="height:5vh">
            <div class="col">
                <div class="input-group center d-flex justify-content-center">
                    <span class="input-group-text handPointer" @onclick="() => SearchString(stringSearch)">
                        <i class="fa fa-search"></i>
                    </span>
                    <input class="form-control" @bind="stringSearch" style="max-width: 50%" type="text" placeholder="Search" />
                </div>
            </div>
        </div>
        <br />

        <!--Table-->
        <div class="row overflow-auto" style="height: 57vh">
            <div class="col">
                <table class="table table-responsive table-hover table-bordered">

                    <!--15% 15% 10% 20% 10% 20% 10% widths-->
                    <thead class="sticky-top" style="background-color: #003340; color: white">
                        <tr class="text-center" style="border-top: solid 0px black">
                            <th scope="col" style="width: 15%">Name</th>
                            <th scope="col" style="width: 15%">Surname</th>
                            <th scope="col" style="width: 9%">CST <br /> (% Mark)</th>
                            <th scope="col" style="width: 20%">CST <br /> (Comment)</th>
                            <th scope="col" style="width: 10%">Interview <br /> (Rating 1 - 5)</th>
                            <th scope="col" style="width: 17%">Interview <br /> (Comment)</th>
                            <th scope="col" style="width: 9%">Phase</th>
                            <th scope="col" style="width: 5%">Action</th>
                        </tr>
                    </thead>

                    <tbody style="background-color:white">
                        @foreach (var items in applicantDatas)
                        {
                            bool editMode = false;
                            <tr>
                                <td>@items.first_name</td>
                                <td>@items.last_name</td>
                                <td>@items.cst_mark</td>
                                <td>@items.cst_comment</td>

                                <td>
                                    @if (tempPerson != null && items == tempPerson)
                                    {
                                        <input type="text" @bind="@items.interview_rating" />
                                    }
                                    else
                                    {
                                        @items.interview_rating
                                    }
                                </td>
                                <td>
                                    @if (tempPerson != null && items == tempPerson)
                                    {
                                        <textarea rows="5" type="text" @bind="@items.interview_comment" />
                                    }
                                    else
                                    {
                                        @items.interview_comment;
                                    }
                                </td>
                                <td>
                                    @if (tempPerson != null && items == tempPerson)
                                    {
                                        <input type="text" @bind="@items.phase" />
                                    }
                                    else
                                    {
                                        @items.phase;
                                    }
                                </td>

                                <td class="controls">
                                    @if (tempPerson != null && tempPerson == items)
                                    {
                                        <button @onclick="() => Save(items)">Save</button>
                                        <button @onclick="() => CancelUpdate(items)">Cancel</button>
                                    }
                                    else
                                    {
                                        <button @onclick="() => ToggleUpdate(items)">Update</button>
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div hidden="@mainmodel.DeveloperIsHidden">
    <h3>You are not authorised to view this page.</h3>
</div>
<div hidden="@mainmodel.ApplicantIsHidden">
    <h3>You are not authorised to view this page.</h3>
</div>