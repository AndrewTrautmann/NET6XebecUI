<div class="job-portal-inner-container" hidden="@PhaseManagerIsHidden">
    <div class="row job-portal-inner-top">
        <div class="col-1">
            <input type="button" value="Applicant Portal" class="job-portal-nav-btn" @onclick="() => ShowApplicantPortal(hrJobState.JobId)" style="margin-left: 20px" />
        </div>
        <div class="col-10">
            <div class="job-search-bar">
                <div class="input-group d-flex justify-content-center form-group">
                    @*<input type="text" placeholder="Search for a jobs" />*@
                </div>
            </div>
        </div>
    </div>
    <div class="job-portal-inner-bottom">
        <XebecPortal.UI.Pages.HR.PhaseManager />
    </div>
</div>

<MudDialog @bind-IsVisible="isDialogVisible" Options="options">
    <TitleContent>
        <MudText Typo="Typo.h5" Align="Align.Center">
            List Of Collaborators For Job Title: <strong>@displayJobDetail.Title</strong>
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">Collaborator 1</MudText>
    </DialogContent>
</MudDialog>

@{
    isFilterContainAnyVal = !string.IsNullOrEmpty(searchJob) || mudSelectLocation?.Any() == true || mudSelectCompany?.Any() == true || mudSelectDepartment?.Any() == true || mudSelectStatus?.Any() == true;
}

@code {
    private bool isDialogVisible;
    private MudBlazor.DialogOptions options = new() { CloseButton = true, FullWidth = true };
    private void OpenJobCollabDialog() => isDialogVisible = true;
}