    job-portal-nav-btn:hover {
        background-color: #d35bc9;
    }

    .hr-jobportal-mudselect {
        cursor: pointer;
        background-color: white;
        height: 7vh;
        font-size: 1.5em;
        font-weight: 800;
        font-family: opensans-condensed-bold;
