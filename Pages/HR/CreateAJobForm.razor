@inject HttpClient HttpClient
@inject IJSRuntime jsRuntime
@inject NavigationManager nav

<style>
    .createjob-form-container {
        height: 55vh;
        width: 50%;
        margin-left: 25%;
        margin-right: 25%;
        background-color: rgba(255,255,255,1);
        border: solid white 0.1em;
        box-shadow: 0 2px 5px 0 rgba(0,0,0, 0.2), 0 2px 10px 0 rgba(0,0,0,0.1);
    }
    .createjob-form{
        height: auto;
        width: 100%;
    }
    .createjob-form-group{
        width: 90%;
        margin-left: 5%;
        margin-right: 5%;
        height: 5vh;
        margin-top: 2vh;
        margin-bottom: 2vh;
        display: flex;
    }
    .createjob-form-individual{
        width: 45%; 
        margin-left: 2.5%;
        margin-right: 2.5%;
        height: 5vh;
    }

    input[type="text"], input[type="email"], input[type="password"], input[type="date"] {
        background-color: transparent;
        width: 100%;
        height: 5vh;
        font-size: 1em;
        border: none;
        border-bottom: solid 0.1em #666666;
        font-weight: 600;
        color: black;
        font-family: opensans-condensed-light;
        padding-left: 1em;
        padding-bottom: 0.1em;
    }
    input::placeholder {
        color: black;
        font-family: opensans-condensed-bold;
        font-size: 1em;
        width: 100%;
        padding-left: 0.3em;
        padding-bottom: 0.1em;
        font-weight: 800;
    }
    
    .createjob-select {
        background-color: transparent;
        width: 100%;
        height: 5vh;
        font-size: 1em;
        border: none;
        border-bottom: solid 0.1em #666666;
        font-weight: 800;
        color: black;
        font-family: opensans-condensed-bold;
        padding-left: 1em;
        padding-bottom: 0.1em;
    }
    textarea {
        background-color: rgba(0,0,0,0.5);
        width: 100%;
        height: 5vh;
        font-size: 1em;
        border: solid 0.5em black;
        border-radius: 2em;
        font-weight: 600;
        color: black;
        font-family: opensans-condensed-light;
    }
    .create-job-form-checkbox-div {
        height: 5vh;
        display: flex;
    }

    .create-job-form-checkboxes {
        height: 5vh;
        width: 20%;
    }

    .create-a-job-form-checkbox-label {
        color: black;
        width: 100%;
        font-weight: 600;
        font-size: 1em;
        font-family: opensans-condensed-light;
        text-align: center;
    }
    .createjob-textarea{
        height: auto;
        width: 85%;
        margin-left: 7.5%;
        margin-right: 7.5%;
       
    }
</style>

<div class="createjob-form-container">
    <form class="createjob-form">
        <div class="form-group createjob-form-group">
            <div class="createjob-form-individual">
                <input type="text" placeholder="Job Name" @bind="TempJob.Title" />
            </div>
        </div>
        <div class="form-group createjob-form-group">
            <div class="createjob-form-individual">
                <input type="text" placeholder="Company Name" @bind="TempJob.Company" />
            </div>
            <div class="createjob-form-individual">
                <select class="createjob-select" @onchange="OnLocationChanged">
                    <option selected>Select Location</option>
                    @foreach (var location in Locations)
                    {
                        <option>@location</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group createjob-form-group">
            <div class="createjob-form-individual">
                <select class="createjob-select" @bind="@Type">
                    <option selected>Select Job Type</option>
                    @foreach (var item in jobTypes)
                    {
                        <option value="@item.Type">@item.Type</option>
                    }
                </select>
                
            </div>
            <div class="createjob-form-individual">
                <select class="createjob-select" @onchange="OnDepartmentChanged">
                    <option selected>Select Department</option>
                    @foreach (var department in Departments)
                    {
                        <option>@department</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group createjob-textarea">
            <textarea class="form-control" style="resize: none" placeholder="Description" rows="4" @bind="TempJob.Description"></textarea>
        </div>
        <div class="form-group createjob-form-group">
            
            <div class="createjob-form-individual">
                <!--I removed the code, caused it was asked of me -Andrew -->
            </div>

            <div class="createjob-form-individual">
                <input type="date" placeholder="Date Advertised" onfocus="(this.type='date')" onblur="(this.type='text')" @bind="TempJob.CreationDate" />
            </div>
        </div>
        <div class="form-group createjob-form-group">
            <div class="createjob-form-individual"></div>
            <div class="createjob-form-individual">
                <input type="date" placeholder="Due Date" onfocus="(this.type='date')" onblur="(this.type='text')" @bind="TempJob.DueDate" />
            </div>
        </div>
    </form>
</div>
<input type="button" value="Save" class="createjob-bottom-main-button" @onclick="Save"/>


@code {

    string Type;

    [Parameter]
    public EventCallback<string> ValueChanged
    {
        get;
        set;
    }

    private Task OnLocationChanged(ChangeEventArgs e)
    {
        TempJob.Location = e.Value.ToString();
        return ValueChanged.InvokeAsync(TempJob.Location);
    }

    private Task OnDepartmentChanged(ChangeEventArgs e)
    {
        TempJob.Department = e.Value.ToString();
        return ValueChanged.InvokeAsync(TempJob.Department);
    }

    private async Task Save()
    {
        JobType jobType = new JobType();
        jobType.Type = Type;
        foreach (var type in jobTypes)
        {
            if (type.Type == Type)
            {
                jobType.Id = type.Id;
            }
        }

        TempJob.JobType = jobType;
        TempJob.JobPlatforms = ListOfPlatforms;
        await TempJobChanged.InvokeAsync(TempJob);
    }

}
