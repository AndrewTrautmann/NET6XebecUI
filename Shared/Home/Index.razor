@page "/"
@inject NavigationManager navmanager
@layout EmptyLayout
@inject HttpClient HttpClient
@using System.Linq;
@using XebecPortal.UI.Shared.Home.Models;

<style>

    * {
        margin: 0;
        padding: 0;
    }

    .underlay {
        background-image: linear-gradient(rgba(0, 188, 174,0.05),rgba(0, 188, 174,0.05)),url(/Img/background.svg);
        height: 100vh;
        width: 101vw;
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        position: fixed;
        z-index: -2;
        overflow-y: scroll;
        overflow-x: hidden;
    }

        .underlay::-webkit-scrollbar {
            background-color: transparent;
            width: 1vw;
        }

        .underlay::-webkit-scrollbar-thumb {
            background-color: white;
            border-radius: 1em;
        }

    .overlay {
        top: 0;
        z-index: 0;
        height: 100vh;
        width: 100%;
    }

    .overlay-nav {
        position: fixed;
        top: 0;
        z-index: 2;
        background-color: white;
        min-height: 10vh;
        padding-top: 4vh;
        width: 101vw;
        text-align: center;
    }

    .nav-buttons {
        width: 100%;
        height: inherit;
        background-color: transparent;
        border: none;
        border-radius: 1em;
        color: #00bcae;
        font-size: 1em;
        font-family: opensans-condensed-bold;
    }

        .nav-buttons:hover {
            width: 100%;
            height: inherit;
            background-color: #d35bc9;
            border: none;
            border-radius: 1em;
            color: white;
            font-family: opensans-condensed-light;
            font-size: 1em;
        }

    .login-page {
        height: 100vh;
        width: 70%;
        display: flex;
        margin-left: 15%;
        margin-right: 15%;
    }

    .login-left {
        height: 70vh;
        width: 40%;
        margin-top: 20vh;
        border-top-left-radius: 2em;
        border-bottom-left-radius: 2em;
        background-color: rgb(255,255,255,0.5);
    }

    .login-right {
        height: 70vh;
        width: 60%;
        margin-top: 20vh;
        background-size: cover;
        background-position: center;
        border-top-right-radius: 2em;
        border-bottom-right-radius: 2em;
        background-image: linear-gradient(rgba(0, 188, 174,0.2),rgba(0, 188, 174,0.2)),url(/Img/pexels1.jpg);
    }

    .index-form-heading {
        width: 100%;
        font-family: opensans-condensed-bold;
        text-align: center;
        opacity: 1;
        background-color: transparent;
        height: 10vh;
    }

    .index-form-login {
        width: 90%;
        margin-left: 5%;
        margin-right: 5%;
        margin-top: 5vh;
        height: auto;
    }

    .index-form-heading-1 {
        font-size: 3em;
        font-weight: 800;
        height: 10vh;
        line-height: 10vh;
        color: black;
        font-family: opensans-condensed-bold;
    }

    .index-form-group {
        width: 100%;
        display: flex;
        height: 7vh;
    }


    .index-group {
        border: solid #00bcae 0.2em;
        background-color: transparent;
        height: 7vh;
        width: 100%;
        border-radius: 1em;
    }


    .index-form-icon {
        width: 10%;
        padding-left: 5%;
        text-align: left;
        background-color: transparent;
        color: #00bcae;
        font-size: 2em;
        height: 7vh;
        line-height: 7vh;
    }

    input[type="text"], input[type="email"], input[type="password"], select {
        background-color: transparent;
        width: 90%;
        height: 7vh;
        line-height: 7vh;
        font-size: 1em;
        border: none;
        font-weight: 800;
        color: black;
        font-family: opensans-condensed-light;
        padding: 1em 1em 1em 1em;
    }

        input:focus, textarea:focus, select:focus {
            outline: none;
        }

    ::placeholder {
        color: black;
        font-family: opensans-condensed-light;
        font-size: 1em;
        width: 100%;
        font-weight: 900;
    }

    .index-form-register {
        width: 90%;
        margin-left: 5%;
        margin-right: 5%;
        height: auto;
    }

    .index-form-heading-2 {
        font-size: 1.5em;
        font-weight: 700;
        color: #666666;
        height: 3vh;
    }

    .index-form-heading-3 {
        font-size: 0.8em;
        font-weight: 600;
        color: black;
        font-family: opensans-condensed-bold;
        height: 3vh;
    }

    .forgotpassword {
        color: rgba(0, 188, 174,1);
        width: 80%;
        margin-left: 10%;
        margin-right: 10%;
        text-align: right;
        height: 3vh;
        line-height: 3vh;
        font-size: 0.8em;
        font-weight: 800;
        margin-bottom: 0;
        padding-bottom: 0;
        cursor: pointer;
    }

        .forgotpassword:hover {
            color: rgba(0, 188, 174,1);
            width: 80%;
            margin-left: 10%;
            margin-right: 10%;
            text-align: right;
            height: 3vh;
            font-size: 1em;
            font-weight: 800;
            margin-bottom: 0;
            padding-bottom: 0;
            cursor: pointer;
        }

    .index-form-button {
        background-color: rgba(0, 188, 174,1);
        color: white;
        width: 50%;
        height: 5vh;
        border: none;
        text-align: center;
        font-size: 1em;
        font-weight: 700;
        border: none;
        margin-left: 25%;
        border-radius: 1em;
    }

        .index-form-button:hover {
            color: white;
            width: 50%;
            height: 5vh;
            border: none;
            text-align: center;
            background-color: #d35bc9;
            font-size: 1em;
            font-weight: 700;
            border: none;
            margin-left: 25%;
        }

    .index-form-or {
        text-align: center;
        height: 3vh;
    }

    .index-form-socials {
        width: 100%;
        display: flex;
        height: 5vh;
    }

    .index-socialmedia-div {
        color: #00bcae;
        font-size: 2em;
        width: 20%;
        height: 5vh;
        margin-left: 13%;
    }

        .index-socialmedia-div:hover {
            color: #d35bc9;
            font-size: 2em;
            width: 20%;
            height: 5vh;
            margin-top: 0vh;
            margin-left: 13%;
        }

    .underlay-nav {
        position: absolute;
        top: 10vh;
        z-index: 2;
        height: 5vh;
        width: 101vw;
    }

    .sign-up-modal-div {
        height: 5vh;
        width: 35%;
        margin-left: 7.5%;
        margin-right: 7.5%;
    }

    .sign-up-modal {
        margin-top: 2vh;
        height: 5vh;
        border-radius: 1em;
        z-index: 2;
        display: flex;
    }

    .modal-nav-buttons {
        width: 100%;
        height: 5vh;
        text-align: center;
        line-height: 5vh;
        background-color: #00bcae;
        border: none;
        border-radius: 1em;
        color: white;
        font-size: 1em;
        font-family: opensans-condensed-bold;
    }

        .modal-nav-buttons:hover {
            background-color: #d35bc9;
            border: none;
            border-radius: 1em;
            color: white;
        }
</style>

<div class="underlay">
    <div class="row overlay-nav">
        <div class="col-6" @onmouseover="CloseSignUpModal"></div>
        <div class="col-1" @onmouseover="CloseSignUpModal">
            <input type="button" class="nav-buttons" value="HOME" @onclick="ToHome" />
        </div>
        <div class="col-1" @onmouseover="CloseSignUpModal">
            <input type="button" class="nav-buttons" value="SERVICES" @onclick="ToServices" />
        </div>
        <div class="col-1" @onmouseover="CloseSignUpModal">
            <input type="button" class="nav-buttons" value="SIGN IN" @onclick="ToSignIn" />
        </div>
        <div class="col-1">
            <input type="button" class="nav-buttons" value="SIGN UP" @onmouseover="ShowSignUpModal" />
        </div>
        <div class="col-1" @onmouseover="CloseSignUpModal">
            <input type="button" class="nav-buttons" value="CONTACT" @onclick="ToContact" />
        </div>
        <div class="col-1" @onmouseover="CloseSignUpModal"></div>
    </div>
    <div class="row underlay-nav" >
        @if (SignUpModal)
        {
            <div class="col-8"></div>
            <div class="col-3 sign-up-modal">
                <div class="sign-up-modal-div">
                    <input type="button" class="modal-nav-buttons" value="Applicant" @onclick="ToApplicantSignUp" />
                </div>
                <div class="sign-up-modal-div">
                    <input type="button" class="modal-nav-buttons" value="HR" @onclick="ToHRSignUp" />
                </div>
            </div>
            <div class="col-1"></div>

        }
    </div>
    <div class="overlay" @onmouseover="CloseSignUpModal">
        @if (Home)
        {
            <XebecPortal.UI.Shared.Home.Home />
        }
        @if (Services)
        {
            <XebecPortal.UI.Shared.Home.Services />
        }
        @if (HRSignUp)
        {
            <XebecPortal.UI.Shared.Home.HRSignUp />
        }
        @if (ApplicantSignUp)
        {
            <XebecPortal.UI.Shared.Home.ApplicantSignUp />
        }
        @if (SignIn)
        {
            <XebecPortal.UI.Shared.Home.SignIn />
        }
        @if (Contact)
        {
            <XebecPortal.UI.Shared.Home.Contact />
        }
    </div>
</div>

@code {

    private bool Home;
    private bool Services;
    private bool SignIn;
    private bool SignUp;
    private bool Contact;
    private bool SignUpModal;
    private bool ApplicantSignUp;
    private bool HRSignUp;

    protected override async Task OnInitializedAsync()
    {
        ToHome();
        await Task.Delay(0);
    }

    private void ToHome()
    {
        Home = true;
        Services = SignIn = Contact = SignUpModal = ApplicantSignUp = HRSignUp = false;
    }

    private void ToServices()
    {
        Services = true;
        Home = SignIn = SignUpModal = Contact = ApplicantSignUp = HRSignUp = false;
    }

    private void ToSignIn()
    {
        SignIn = true;
        Services = Home = SignUpModal = Contact = ApplicantSignUp = HRSignUp = false;
    }

    private void ToApplicantSignUp()
    {
        ApplicantSignUp = true;
        Services = HRSignUp = SignUpModal = SignIn = Home = Contact = false;
    }
    private void ToHRSignUp()
    {
        HRSignUp = true;
        Services = ApplicantSignUp = SignUpModal = SignIn = Home = Contact = false;
    }
    private void ToContact()
    {
        Contact = true;
        Services = SignIn = SignUpModal = Home = ApplicantSignUp = HRSignUp = false;
    }

    private void ShowSignUpModal()
    {
        SignUpModal = true;
    }
    private void CloseSignUpModal()
    {
        SignUpModal = false;
    }
}
