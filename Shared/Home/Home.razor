@page "/"
@inject NavigationManager navmanager
@inject HttpClient HttpClient
@using System.Linq;
@using XebecPortal.UI.Shared.Home.Models

<style>
    .overlay-home {
        height: 90vh;
        width: 100%;
    }
    
    .home-left-block {
        height: 70vh;
        width: 80%;
        margin-left: 10%;
        margin-right: 10%;
        margin-top: 20vh;
        text-align: center;
    }

    .home-image-container {
        height: 60vh;
        border-top-left-radius: 7em;
        border-top-right-radius: 7em;
    }

    .home-left-heading {
        height: 30vh;
        margin-bottom: 5vh;
        width: 70%;
        margin: auto;
    }

    .home-left-body {
        height: 15vh;
        margin-top: 2.5vh;
        width: 100%;        
    }

        .home-left-body p {
            color: black;
            text-align: center;
            font-family: opensans-condensed-light;
            font-weight: 600;
            font-size: 1.3em;
            text-transform: uppercase;
        }
    .home-xebec-logo {
        height: 30vh;
        max-width: 100%;
        background-image: url(/Img/xebeclogoblack.png);
        background-size: cover;
        background-position: center;
    }  

    .image1 {
        height: 50vh;
        margin-top: 10vh;
        border-top-left-radius: 7em;
        border-top-right-radius: 7em;
        background-image: linear-gradient(rgba(0, 188, 174,0.3),rgba(0, 188, 174,0.3)),url(/Img/c.jpg);
        background-size: cover;
        background-position: center;
    }

    .image2 {
        height: 50vh;
        margin-top: 20vh;
        border-top-left-radius: 7em;
        border-top-right-radius: 7em;
        background-image: linear-gradient(rgba(0, 188, 174,0.3),rgba(0, 188, 174,0.3)),url(/Img/d.jpg);
        background-size: cover;
        background-position: center;
    }

    .home-image-label {
        height: 10vh;
        border-bottom-left-radius: 7em;
        border-bottom-right-radius: 7em;
        color: white;
        text-align: center;
        background-color: #00bcae;
        font-weight: 700;
        font-size: 1em;
        line-height: 10vh;
        font-family: opensans-bold;
    }
    
</style>
<div class="row overlay-home" id="home">
    <div class="col-4">
        <div class="home-left-block">
            <div class="home-left-heading">
                <div class="home-xebec-logo"></div>
            </div>
            <div class="home-left-body">
                <p>We streamline the recruitment experience with analytical feedback in a unified space.</p>
            </div>
        </div>
    </div>
    <div class="col-1"></div>
    <div class="col-3 home-image-container">
        <div class="image1"></div>
        <div class="home-image-label">APPLICANTS PORTAL</div>
    </div>
    <div class="col-3 home-image-container">
        <div class="image2"></div>
        <div class="home-image-label">HUMAN RESOURCES PORTAL</div>
    </div>
    <div class="col-1"></div>
</div>