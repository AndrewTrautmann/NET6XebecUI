<div class="row index-container">
    <div class="col-xl-7 index-container-left">
        <div class="index-left-top-1">
            <h3 class="index-content-header">new to xebec?</h3>
            <button class="index-content-button" @onclick="GoToHome">Explore</button>
        </div>
        <div class="index-left-bottom">
            <img src="img/login-phone3.svg" asp-append-version="true">
        </div>
    </div>
    <div class="col-xl-5 index-container-right">
        <form class="index-form-login">
            <div class="form-group index-form-heading">
                <h1 class="index-form-heading-2">enter and confirm a new password</h1>
            </div>
            <div class="form-group index-form-group">
                <div class="index-form-icon">
                    <i class="fa fa-user"></i>
                </div>
                <input type="email" placeholder="email address" @bind="@email">
            </div>
            <div class="form-group index-form-group">
                <div class="index-form-icon">
                    <i class="fa fa-lock "></i>
                </div>
                <input type="password" placeholder="password" @bind="@password1">
            </div>
            <div class="form-group index-form-group">
                <div class="index-form-icon">
                    <i class="fa fa-lock "></i>
                </div>
                <input type="password" placeholder="confirm password" @bind="@password2">
            </div>
            <div class="form-group index-form-or" hidden="@invalidPasswordMessageIsHidden">
                <h1 class="index-form-heading-3">passwords do not match</h1>
            </div>
            <div class="form-group index-form-or" hidden="@invalidEmailMessageIsHidden">
                <h1 class="index-form-heading-3">invalid email address</h1>
            </div>
            <div class="form-group index-form-or" hidden="@validSubmitIsHidden">
                <h1 class="index-form-heading-3">new credentials saved successfully</h1>
            </div>
            <button type="submit" class="index-form-button" @onclick="Submit">Submit</button>
        </form>
    </div>
</div>

@code {

    private List<UserModel> users = null;
    private UserModel thisUser = new UserModel();
    private int user;
    private string email = "";
    private string password1 = "";
    private string password2 = "";
    private bool validSubmitIsHidden { get; set; }
    private bool invalidEmailMessageIsHidden {get; set;}
    private bool invalidPasswordMessageIsHidden { get; set; }

    protected override async Task OnInitializedAsync()
    {
        invalidEmailMessageIsHidden = true;
        invalidPasswordMessageIsHidden = true;
        validSubmitIsHidden = true;
        users = await HttpClient.GetFromJsonAsync<List<UserModel>>("https://my-json-server.typicode.com/IviweMalotana/xebecDB/Users");
    }

    private bool PasswordCheck()
    {
        if (password1 != password2)
        {
            invalidPasswordMessageIsHidden = false;
            return false;
        }
        else
        {
            invalidPasswordMessageIsHidden = true;
            thisUser.Password = password1;
            //update database 
            return true;
        }
    }

    public void GoToHome()
    {
        navmanager.NavigateTo("/");
    }


    public void Submit()
    {

        if (PasswordCheck())
        {
            try
            {
                thisUser = users.Where(x => x.Email == email).Single();
                invalidEmailMessageIsHidden = true;
                validSubmitIsHidden = true;
                thisUser.Password = password1;
                HttpClient.PostAsJsonAsync("https://my-json-server.typicode.com/IviweMalotana/xebecDB/Users", thisUser);
            }
            catch
            {
                invalidEmailMessageIsHidden = false;
            }

        }
        else
        {

        }
    }
}
