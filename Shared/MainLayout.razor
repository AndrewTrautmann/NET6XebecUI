                    </NavLink>


                    <NavLink class="nav-link" href="candidaterecommendiontool">
                        <i class="fas fa-lightbulb icon" aria-hidden="true"></i>Candidate Recommendation Tool
                    </NavLink>

                    <NavLink class="nav-link" href="dataanalyticstool">
                        <i class="fa fa-chart-bar icon" aria-hidden="true"></i>Data Analytics Tool
                    </NavLink>
                    <NavLink class="nav-link" href="hrjobportal">
                        <i class="fa fa-briefcase icon" aria-hidden="true"></i>Job Portal
                    </NavLink>
                }
                else if (mainmodel.isApplicant)
                {
                    <NavLink class="nav-link" href="applicationprofile">
                        <i class="fa fa-book icon" aria-hidden="true"></i>Application Profile
                    </NavLink>

                    <NavLink class="nav-link" href="applicantjobportal">
                        <i class="fa fa-file icon" aria-hidden="true"></i>Job Portal
                    </NavLink>
                    <NavLink class="nav-link" href="myjobs">
                        <i class="fa fa-users icon" aria-hidden="true"></i>My Jobs
