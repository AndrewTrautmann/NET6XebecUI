@inherits LayoutComponentBase
<style>
    .page {
        background-color: #a7a9ab;
    }

    .header {
        background-color: #003340;
        height: 10vh;
    }

    .main {
        height: 80vh;
    }

    .footer {
        background-color: #003340;
        height: 10vh;
