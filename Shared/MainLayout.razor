    .profile-name {
        color: #00bcae;
        font-size: 1.5em;
        font-weight: 800;
        display: inline-block;
        width: 100%;
        height: 100%;
    }

    .profile-role {
        color: #a7a9ab;
        font-size: 1em;
        font-weight: 800;
        display: inline-block;
        width: 100%;
        height: 100%;
    }

    .profile-icon {
        color: #003340;
        font-size: 2em;
        display: inline-block;
        height: 100%;
    }

    .profile-email {
        color: #00bcae;
        font-size: 1em;
        display: inline-block;
