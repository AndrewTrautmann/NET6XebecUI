            }
        </div>
    </div>

    <div class="offcanvas offcanvas-end nav" tabindex="-1" id="showNav" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header">
            <h5 id="offcanvasRightLabel">Nav Information</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            @{
                if (mainmodel.isHR)
                {
                    <NavLink class="nav-link" href="hrapplicantcontroltool">
                        <i class="fa fa-table icon" aria-hidden="true"></i>Applicant Control Tool
                    </NavLink>
                    <NavLink class="nav-link" href="applicantportal">
